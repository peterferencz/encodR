    "version": "0.2.0",
    "configurations": [
        {
            "name": "Encode",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/bin",
            "args": ["kodol", "--bemenet", "./out/test.txt", "--kimenet", "./out/encoded", "--kodtabla"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Decode",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/bin",
            "args": ["dekodol", "--bemenet", "./out/encoded", "--kimenet", "./out/decoded.txt", "--kodtabla"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}